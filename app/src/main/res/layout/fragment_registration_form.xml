<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationForm"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/form"
    android:background="#737373"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="50dp">

        <EditText
            android:drawableLeft="@drawable/ic_credit_card_black_24dp"
            android:drawablePadding="10dp"
            android:id="@+id/student_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Student ID Card"
            android:layout_marginBottom="20dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:background="@drawable/rectangle_shape"
            android:enabled="true"/>

        <EditText
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="10dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Student Name"
            android:layout_marginBottom="20dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:background="@drawable/rectangle_shape"/>

        <EditText
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="10dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Password"
            android:layout_marginBottom="20dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:background="@drawable/rectangle_shape"/>

        <EditText
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Email"
            android:layout_marginBottom="20dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:background="@drawable/rectangle_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_shape"
            android:layout_marginBottom="20dp">

            <TextView
                android:drawableLeft="@drawable/ic_people_outline_black_24dp"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gender"
                android:textAppearance="?android:textAppearanceSmall"/>

            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/gender"
                android:background="@drawable/rectangle_shape">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textAppearance="?android:textAppearanceSmall"/>

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textAppearance="?android:textAppearanceSmall"/>

            </RadioGroup>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/savebtn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Save"
                android:background="#800020"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/readbtn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Read"
                android:background="#800020"
                android:textColor="#ffffff"
                android:layout_alignLeft="@id/savebtn"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/deletebtn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Delete"
                android:background="#800020"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"/>/>

            <Button
                android:id="@+id/updatebtn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Update"
                android:background="#800020"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>